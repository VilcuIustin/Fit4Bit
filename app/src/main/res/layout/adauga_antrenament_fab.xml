<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butonsalveazatotantrenamentul"
        android:layout_width="56dp"
        android:layout_height="47dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buton_style_3"
        android:ems="2"
        android:fontFamily="@font/cuprum_bold"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerviewadaugaexercitiu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edittextnumeantrenament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:ems="13"
        android:fontFamily="@font/cuprum"
        android:inputType="textPersonName"
        android:textColor="@color/culoareBonus"
        android:hint="@string/introduceti_numele_antrenamentului"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butonadaugaexercitiu"
        android:layout_width="56dp"
        android:layout_height="47dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buton_style_3"
        android:ems="1"
        android:fontFamily="@font/cuprum_bold"
        android:text="@string/plusulet"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toStartOf="@+id/butonsalveazatotantrenamentul"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>